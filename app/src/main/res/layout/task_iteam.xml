<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">
            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/tag"
                android:background="@color/pinkligh">
            </View>

            <TextView
                android:id="@+id/task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="18dp"
                android:layout_toStartOf="@+id/bin"
                android:layout_toEndOf="@id/tag"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="Go llo need to work for work work work for work"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/task_name"
                android:layout_marginEnd="18dp"
                android:layout_toStartOf="@+id/bin"
                android:layout_toEndOf="@id/tag"
                android:fontFamily=""
                android:maxLines="1"
                android:visibility="visible"
                android:text="25 December - 2:00 pm"
                android:textColor="@color/text_grey"
                android:textSize="12sp" />



            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_garbage"
                android:id="@+id/bin"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="50dp"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/checked"
                android:visibility="gone"
                android:src="@drawable/ic_checked"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/unchecked_item"
                android:src="@drawable/ic_unchecked"
                android:visibility="visible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="0.3dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:background="#dedede"
                android:layout_marginBottom="0dp"
                android:id="@+id/boarder">
            </View>
        </RelativeLayout>




</RelativeLayout>